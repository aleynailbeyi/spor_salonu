<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b9b5b5"
    tools:context=".SalonGiris">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/baslik_salon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#73372c"
            android:text="SPOR SALONU İÇİN GİRİS EKRANI"
            android:gravity="center"
            android:layout_margin="20dp">
        </TextView>

        <EditText
            android:id="@+id/login_eposta_salon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#EFEBE9"
            android:hint="Kullanıcı Adı"
            android:inputType="textPersonName"
            android:padding="12dp" />
        <EditText
            android:id="@+id/login_parola_salon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#EFEBE9"
            android:ems="10"
            android:hint="Parola"
            android:inputType="textPassword"
            android:padding="12dp" />
        <Button
            android:id="@+id/btn_login_salon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:text="Giriş Yap" />

    </LinearLayout>

</LinearLayout>